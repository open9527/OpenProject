<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="dialog"
            type="com.android.open9527.common.dialog.CommonLoadDialog" />

    </data>

    <LinearLayout
        bindDrawableRadius="@{10}"
        bindDrawableSolidColor="@{@color/translucent}"
        android:layout_width="@dimen/size_80"
        android:layout_height="@dimen/size_80"
        tools:background="@color/translucent"
        android:gravity="center">

        <ProgressBar
            android:layout_width="@dimen/size_40"
            android:layout_height="@dimen/size_40"
            android:indeterminateBehavior="repeat"
            android:indeterminateDrawable="@drawable/common_pb_loading" />


    </LinearLayout>
</layout>