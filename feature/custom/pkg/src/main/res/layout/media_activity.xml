<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.android.custom.pkg.media.MediaViewModel" />

        <variable
            name="click"
            type="com.android.custom.pkg.media.MediaActivity.ClickProxy" />

        <variable
            name="adapter"
            type="androidx.recyclerview.widget.RecyclerView.Adapter" />

        <variable
            name="itemDecoration"
            type="androidx.recyclerview.widget.RecyclerView.ItemDecoration" />

        <variable
            name="layoutManager"
            type="androidx.recyclerview.widget.RecyclerView.LayoutManager" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            layout="@layout/custom_title_bar"
            app:barBackClick="@{click.backClick}"
            app:barTitleText="@{vm.valueTitle}" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            bindRvAdapter="@{adapter}"
            bindRvAnim="@{false}"
            bindRvItemDecoration="@{itemDecoration}"
            bindRvLayoutManager="@{layoutManager}"
            bindRvList="@{vm.valueCellList}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:overScrollMode="never"
            android:scrollbars="none"
            tools:layoutManager="com.android.open9527.recycleview.layout_manager.WrapContentGridLayoutManager"
            tools:spanCount="2" />
    </LinearLayout>
</layout>