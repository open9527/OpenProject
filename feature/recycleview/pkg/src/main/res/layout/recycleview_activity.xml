<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.android.open9527.recycleview.pkg.main.RecycleViewViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/offset_64"
            app:bindTabLayoutDefaultIndex="@{vm.valueDefaultIndex}"
            app:bindTabLayoutFragmentList="@{vm.valueFragments}"
            app:bindTabLayoutFragmentManager="@{vm.valueFragmentManager}"
            app:bindTabLayoutItemLayout="@{vm.valueItemLayout}"
            app:bindTabLayoutSelectedListener="@{vm.valueTabSelectedListener}"
            app:bindTabLayoutTabBeanData="@{vm.valueTabList}"
            app:tabIndicatorHeight="0dp"
            app:tabRippleColor="@android:color/transparent" />

    </LinearLayout>
</layout>